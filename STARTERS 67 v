//Maximum Angriness

#include <iostream>
using namespace std;

int main() {
	int t;
	cin>>t;
	while(t--){
	    long long int n,p;
	    cin>>n>>p;
	    long long int sum = (n*(n-1))/2;
	    if(p<n/2){
	        long long x = n-2*p;
	        sum = sum-(x*(x-1))/2;
	    }
	    cout<<sum<<endl;
	}
	return 0;
}
